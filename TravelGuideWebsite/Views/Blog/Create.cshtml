@model TravelGuideWebsite.Models.BlogPost

@{
    ViewBag.Title = "Create Blog Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-md">
    <h2>Yeni Bir Blog Yazın!</h2>


    @using (Html.BeginForm("Create", "Blog", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Title, "Başlık")
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, "İçerik")
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = "5" })
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CityId, "Şehir")
            @Html.DropDownList("CityId", (SelectList)ViewBag.Cities, "Şehir Seçiniz", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CityId)
        </div>


        <div class="form-group">
            <label for="image">Image URL</label>
            <input type="text" name="Image" class="form-control" placeholder="Enter image URL" />
        </div>

        <button type="submit" class="btn btn-primary mt-3 mb-3">Oluştur</button>
    }
</div>