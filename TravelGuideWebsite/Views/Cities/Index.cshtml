@model IEnumerable<TravelGuideWebsite.Models.City>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        @foreach (var city in Model)
        {
            <div class="col">
                <a href="@Url.Action("Detail", "Cities", new { id = city.Id })">
                    <div class="card h-100 text-center">

                        <img src="@Url.Content(city.Image)" class="card-img- w-100 h-100" alt="@city.Name">
                        <div class="card-body">
                            <h5 class="card-title">@city.Name</h5>
                            <p class="card-text">@city.Description</p>
                        </div>

                    </div>
                </a>
            </div>
        }
    </div>
</div>
